<Application x:Class="Xylia.Preview.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:hc="https://handyorg.github.io/handycontrol"
			 DispatcherUnhandledException="Application_DispatcherUnhandledException" >
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary>
					<FontFamily x:Key="FontAwesome">/Resources/Fonts/#Font Awesome 5 Free</FontFamily>
				</ResourceDictionary>
				<res:StringHelper xmlns:res="clr-namespace:Xylia.Preview.UI.Resources" />
				
				<ResourceDictionary Source="/Resources/Themes/Styles.xaml"/>
				<hc:ThemeResources/>
				<hc:Theme/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>