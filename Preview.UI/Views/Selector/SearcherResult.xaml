<Window x:Class="Xylia.Preview.UI.Views.Selector.SearcherResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VM="clr-namespace:Xylia.Preview.UI.ViewModels"
        Title="SearcherResult" Height="405" Width="467"
		DataContext="{Binding RelativeSource={RelativeSource Self}}">
	<Grid>
		<ListBox ItemsSource="{Binding Source, Mode=OneWay}" HorizontalContentAlignment="Stretch" VirtualizingStackPanel.IsVirtualizing="True">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border MinHeight="40" BorderBrush="#EBEBEB" BorderThickness="0 1 0 0" ToolTip="{Binding Attributes[alias]}" >
						<Border.ContextMenu>
							<ContextMenu>
								<MenuItem Header="{DynamicResource View_Model}" Command="VM:PreviewModel.Command" CommandParameter="{Binding Path=.}"/>
							</ContextMenu>
						</Border.ContextMenu>

						<Grid VerticalAlignment="Center">
							<TextBlock Text="{Binding Text}" Foreground="#EE796F" FontSize="12" Margin="20,0" />
							<TextBlock Text="{Binding Map}" Foreground="Black" FontSize="12" Margin="6,0" HorizontalAlignment="Right" />
						</Grid>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Window>
