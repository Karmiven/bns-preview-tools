<BnsCustomWindowWidget x:Class="Xylia.Preview.UI.GameUI.Scene.Game_Tooltip.RewardTooltipPanel"
	xmlns="https://github.com/xyliaup/bns-preview-tools"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:s="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Width="480">

	<BnsCustomColumnListWidget Name="ColumnList" ShowLines="True" CellMerge="ColumnList_CellMerge" Width="480">
		<BnsCustomColumnListWidget.ColumnDefinitions>
			<s:ColumnDefinition Width="4*" />
			<s:ColumnDefinition Width="3*" />
			<s:ColumnDefinition Width="2*" />
		</BnsCustomColumnListWidget.ColumnDefinitions>
		<BnsCustomColumnListWidget.RowDefinitions>
			<s:RowDefinition Height="30" />
		</BnsCustomColumnListWidget.RowDefinitions>

		<!-- Column Header -->
		<BnsCustomLabelWidget Name="Column1" Text="{s:DynamicResource Text_Name}" BnsCustomColumnListWidget.Row="0" BnsCustomColumnListWidget.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" />
		<BnsCustomLabelWidget Name="Column2" Text="{s:DynamicResource Text_Group}" BnsCustomColumnListWidget.Row="0" BnsCustomColumnListWidget.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
		<BnsCustomLabelWidget Name="Column3" Text="{s:DynamicResource Text_Info}" BnsCustomColumnListWidget.Row="0" BnsCustomColumnListWidget.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" />
	</BnsCustomColumnListWidget>

</BnsCustomWindowWidget>