<Window
		x:Class="Xylia.Preview.UI.Art.GameUI.Scene.Game_ItemStore.Game_ItemStoreScene"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Xylia.Preview.UI.Art.GameUI.Scene.Game_ItemStore"    
        Title="Game_ItemStoreScene" Height="500" Width="750">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<TreeView Grid.Column="0" x:Name="TreeView" SelectedItemChanged="TreeView_SelectedItemChanged" />
		<local:ItemStorePanel Grid.Column="1" x:Name="ItemStorePanel"/>
	</Grid>
</Window>