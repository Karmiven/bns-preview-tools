<UserControl x:Class="Xylia.Preview.UI.Art.GameUI.Scene.Game_ItemMap.ItemMapPanel"
			 xmlns:local="clr-namespace:Xylia.Preview.UI.Art.GameUI.Scene.Game_ItemMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:Xylia.Preview.UI.Common.Controls"
             mc:Ignorable="d" d:DesignHeight="200" d:DesignWidth="400">
	<UserControl.Resources>
		<ContextMenu x:Key="ItemMenu">
			<MenuItem Header="设为起始物品" Click="SetStartingPoint" />
			<MenuItem Header="设为结束物品" Click="SetDestination" />
		</ContextMenu>

		<Style TargetType="{x:Type Controls:ItemPanel}">
			<Style.Setters>
				<Setter Property="ContextMenu" Value="{StaticResource ItemMenu}" />
			</Style.Setters>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="Yellow"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</UserControl.Resources>
	
	<ScrollViewer x:Name="scroller" PreviewMouseWheel="PanelMouseWheel" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
		<Canvas x:Name="root" />
	</ScrollViewer>
</UserControl>
