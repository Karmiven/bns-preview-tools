<UserControl x:Class="Xylia.Preview.UI.Common.Controls.ItemPanel" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Xylia.Preview.UI.Common.Controls"
			 DataContext="{Binding RelativeSource={RelativeSource Self}}">
	<StackPanel>
		<Controls:BnsCustomImageWidget HorizontalAlignment="Center" />
		<TextBlock Text="{Binding Text}" TextWrapping="Wrap" MaxWidth="120" Foreground="Black" 
				 HorizontalAlignment="Center" Block.TextAlignment="Center" />
	</StackPanel>
</UserControl>
