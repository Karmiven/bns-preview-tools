      <case name="none" />
      <case name="pose" />
      <case name="face-look" />
      <case name="costume" />
      <case name="light" />
      <case name="silhouette" />
    </record>
    <record name="preview-value" type="Int8" key="y" required="y" min="1" max="40" />
    <record name="race" type="Prop_seq" seq="race" key="y" required="y" />
    <record name="sex" type="Prop_seq" seq="sex" key="y" required="y" />
    <sub name="pose">
      <record name="pose-showname" type="String" max="50" />
