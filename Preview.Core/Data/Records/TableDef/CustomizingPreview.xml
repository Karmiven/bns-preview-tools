      <record name="icon-index" type="Int16" default="0" />
    </sub>
    <sub name="costume">
      <record name="costume-item" type="Ref" ref="item" />
    </sub>
    <sub name="light">
      <record name="icon-texture" type="Ref" ref="icontexture" />
      <record name="icon-index" type="Int16" default="0" />
      <record name="light-index" type="Int16" required="y" />
    </sub>
    <sub name="silhouette">
      <record name="silhouette-designer-preset-index" type="Int32" required="y" />
