      <record name="silhouette-sex" type="Prop_seq" seq="sex" required="y" />
      <record name="icon-texture" type="Ref" ref="icontexture" />
      <record name="icon-index" type="Int16" default="0" />
      <record name="desc" type="Ref" ref="text" />
    </sub>
  </el>
</table>